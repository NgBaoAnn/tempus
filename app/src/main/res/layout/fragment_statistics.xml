<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Title -->

        <TextView
            android:id="@+id/tvStatisticDesc2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Tổng cộng 0 trong 0 tác vụ đã hoàn thành"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatisticTitle" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/statis_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Toggle -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            app:singleSelection="true"
            app:checkedButton="@id/btnWeek"
            app:selectionRequired="true"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="#F0F0F0"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.LargeComponent.Rounded">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWeek"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/week"
                android:textAllCaps="false"
                app:cornerRadius="10dp"
                android:textColor="@color/selector_toggle_text"
                android:stateListAnimator="@animator/button_elevation"
                app:backgroundTint="@color/selector_toggle_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.LargeComponent.Rounded" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMonth"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cornerRadius="10dp"
                android:text="@string/month"
                android:layout_marginLeft="20dp"
                android:textAllCaps="false"
                android:textColor="@color/selector_toggle_text"
                android:stateListAnimator="@animator/button_elevation"
                app:backgroundTint="@color/selector_toggle_background"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.LargeComponent.Rounded" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
        <!-- Statistic -->
        <TextView
            android:id="@+id/tvStatisticTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/chart_title"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/toggleGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <!-- Navigation -->

        <TextView
            android:id="@+id/tvStatisticDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="17/11 - 23/11"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStatisticTitle" />

        <!-- Chart -->

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="375dp"
            android:layout_height="339dp"
            android:layout_marginTop="60dp"
            android:background="#E7E7E7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatisticDesc2" />

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/prev"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/barChart" />

        <TextView
            android:id="@+id/tvRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="17/11 - 23/11"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btnNext"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toEndOf="@id/btnPrev"
            app:layout_constraintTop_toBottomOf="@id/barChart" />

        <!-- Category title -->

        <!-- Category list -->

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/next"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"
            app:layout_constraintTop_toBottomOf="@id/barChart" />

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/category_title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnPrev" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
