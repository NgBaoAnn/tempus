<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/btnMonthPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_month_pill"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="thg 11 2025"
            android:textColor="#2196F3"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_unfold_more"
            app:tint="#2196F3"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnAdd"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/add"
        app:tint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnMonthPicker"
        app:layout_constraintBottom_toBottomOf="@id/btnMonthPicker" />

    <ImageView
        android:id="@+id/btnInbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/inbox"
        app:tint="#2196F3"
        app:layout_constraintEnd_toStartOf="@id/btnAdd"
        app:layout_constraintTop_toTopOf="@id/btnAdd"
        app:layout_constraintBottom_toBottomOf="@id/btnAdd" />
    <LinearLayout
        android:id="@+id/layoutWeekHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnMonthPicker">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T2" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T3" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T4" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T5" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T6" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="T7" android:textColor="#9E9E9E" android:textSize="13sp"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:gravity="center" android:text="CN" android:textColor="#9E9E9E" android:textSize="13sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutWeekHeader"
        tools:listitem="@layout/item_calendar_day" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/rvCalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_timeline_block" />

</androidx.constraintlayout.widget.ConstraintLayout>
