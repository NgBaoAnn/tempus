<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/timelineFragment">

    <fragment
        android:id="@+id/timerFragment"
        android:name="com.projectapp.tempus.TimerFragment"
        android:label="fragment_timer"
        tools:layout="@layout/fragment_timer" />
    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.projectapp.tempus.TimelineFragment"
        android:label="fragment_timeline"
        tools:layout="@layout/fragment_timeline">

        <action
            android:id="@+id/action_timelineFragment_to_editScheduleFragment"
            app:destination="@id/editScheduleFragment" />

    </fragment>
    <fragment
        android:id="@+id/aiFragment"
        android:name="com.projectapp.tempus.AIFragment"
        android:label="fragment_ai"
        tools:layout="@layout/fragment_ai" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.projectapp.tempus.StatisticsFragment"
        android:label="fragment_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.projectapp.tempus.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/editScheduleFragment"
        android:name="com.projectapp.tempus.ui.timeline.EditScheduleFragment"
        android:label="Edit Schedule"
        tools:layout="@layout/fragment_edit_schedule">

        <argument
            android:name="taskId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
</navigation>