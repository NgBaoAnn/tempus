<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="sweep"
                android:startColor="#FF0000"
                android:centerColor="#00FF00"
                android:endColor="#0000FF" />
            <stroke android:width="2dp" android:color="#F2F2F7" />
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#34C759" /> <!-- Màu mặc định bên trong -->
        </shape>
    </item>
</layer-list>